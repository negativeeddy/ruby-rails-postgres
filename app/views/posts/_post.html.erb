<div>
    <h6>from <%= post.author.email %> at <%= post.created_at%></h6>
    <% @replies = post.replies.to_a %>
    <p><%= post.content %> 
        (
        <%= link_to "#{@replies.count} replies", controller: "posts", action: "show", id: post.id %>
        )
    <table style="margin-left:40px"><tr><td><%= link_to "reply", controller: "posts", action: "new", reply_to: post.id %></td></tr></table>
    </p>

    <% 
    if !post.media.blank?
        concat "<div>#{image_tag post.media}</div>"
    end 
    %>

    <% if expand_replies%>
    <hr/>

    <div style="margin-left:40px">
        <ul class="list-group">
            <% @replies.each do |r| %>
                <li class="list-group"><div>
                <%= render partial: "posts/post", locals: {post:r, expand_replies:true} %>
                </li>
            <% end %>
        </ul>
    </div>  
    <% end %>
</div>