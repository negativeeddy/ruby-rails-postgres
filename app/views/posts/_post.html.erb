<div>
    <% puts post.inspect %>
    <h6>from <%= post.author.email %> at <%= post.created_at%></h6>
    <% @replies = post.replies.to_a %>
    <p><%= post.content %> 
        (
        <%= link_to "#{@replies.count} replies", controller: "posts", action: "show", id: post.id %>
        )
    </p>

    <% 
    if (post.media != nil)
        concat "<div>#{image_tag post.media}</div>"
    end 
    %>

    <hr/>

    <div style="margin-left:40px">
        <ul class="list-group">
            <% @replies.each do |r| %>
                <li class="list-group"><div>
                <%= render partial: "posts/post", locals: {post:r} %>
                </li>
            <% end %>
        </ul>
    </div>  
</div>